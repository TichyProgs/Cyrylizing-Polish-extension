{

    "manifest_version": 2,
    "name": "Polish Cyrylizer",
    "version": "1.1",

    "description": "Translate Polish text to Polish cyryllic",

    "icons": {
        "16": "icon32.png",
        "32": "icon32.png",
        "48": "icon32.png"
    },
    
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["content.js"]
        }
        
    ],

    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": "icon32.png"
    },

    "web_accessible_resources": [
        "dict.json"
    ]
        
}
